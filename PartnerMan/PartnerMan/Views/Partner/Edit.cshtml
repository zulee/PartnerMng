@model PartnerMan.Models.PartnerModel

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <input type="hidden" id="callAfterSuccessClose" value="partnersTableRefresh()" />
            <input asp-for="Id" type="hidden" />

            <div class="row">
                <div class="col-12">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="MiddleName" class="control-label"></label>
                        <input asp-for="MiddleName" class="form-control" />
                        <span asp-validation-for="MiddleName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <a id="addAddressRowEdit" href="#" class="btn btn-block btn-primary">Cím hozzáadása</a>
            </div>
            <div id="addressesContainer">
                @Html.EditorFor(model => model.Addresses)
            </div>
        </form>
    </div>
</div>

