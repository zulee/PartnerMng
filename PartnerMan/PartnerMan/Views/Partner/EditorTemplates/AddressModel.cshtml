@model AddressModel

<div class="row border m-2 p-2">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="Id" type="hidden" />
    <div class="col-3">
        <label class="control-label">Országkód</label>
        <input asp-for="CountryCode" class="form-control" />
        <span asp-validation-for="CountryCode" class="text-danger"></span>
    </div>
    <div class="col-3">
        <label class="control-label">Irányítószám</label>
        <input asp-for="PostalCode" class="form-control" />
        <span asp-validation-for="PostalCode" class="text-danger"></span>
    </div>
    <div class="col-6">
        <label class="control-label">Város</label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="col-11">
        <label class="control-label">Utca, házszám</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="col-1">
        <a href="#" addrId="@Model.Id" class="deleteButton btn btn-danger">X</a>
    </div>

</div>